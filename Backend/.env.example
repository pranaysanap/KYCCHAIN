# MongoDB Configuration
MONGO_URI=mongodb+srv://your_username:your_password@cluster.mongodb.net/?appName=your_app_name

# JWT Secret Key for Authentication
JWT_SECRET=your_jwt_secret_key_here

# Mailjet Email Service Configuration
MAIL_API=your_mailjet_api_key
MAIL_SEC=your_mailjet_secret_key
MAIL_END=https://api.mailjet.com/v3.1/send

# Mailjet Verified Sender Email
MAIL_FROM=ratyat416@gmail.com
MAIL_FROM_NAME=KYCChain

# Server Configuration
PORT=5000
NODE_ENV=development

# Cloudinary Configuration (for document uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# OpenAI Configuration (for AI fraud detection)
OPENAI_API_KEY=your_openai_api_key_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Session/Cookie Configuration
SESSION_SECRET=your_session_secret_here

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=15

# IMPORTANT NOTES:
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to version control
# 3. Keep your API keys secure
# 4. Use different keys for development and production
# 5. Mailjet sender email (ratyat416@gmail.com) must be verified
